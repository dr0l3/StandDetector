<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold the phone (still) like below and get the number to around 9.8!"
        android:id="@+id/InstructionTextView"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="319dp"
        android:layout_height="400dp"
        android:id="@+id/imageViewPosition"
        android:src="@drawable/x_axis_pos"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:id="@+id/textViewShowGravity"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start configuration process"
        android:onClick="startConfiguration"
        android:layout_gravity="center_horizontal" />

</LinearLayout>